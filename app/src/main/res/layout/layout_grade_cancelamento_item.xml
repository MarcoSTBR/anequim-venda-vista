<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/botao_customizado"
    android:orientation="vertical">

    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginLeft="5dp"
       android:layout_marginRight="5dp"
       android:orientation="vertical">
        <ImageView
            android:id="@+id/image_transferencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            app:srcCompat="@android:drawable/ic_menu_delete" />

            <TextView
                android:id="@+id/textProdutoDescricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:gravity="center"
                tools:text="COCA COLA 300ML"
                />

            <TextView
                android:id="@+id/textProdutoObs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                tools:text="obs sem gelo" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >

        <ImageButton
            android:id="@+id/ib_menosS"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:background="@drawable/botao_customizado"
            app:srcCompat="@drawable/ic_baseline_remove_24" />

        <TextView
            android:id="@+id/textQPrPedidoItemS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/ib_maisS"
            android:layout_toEndOf="@id/ib_menosS"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:text="999910" />

        <ImageButton
            android:id="@+id/ib_maisS"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/botao_customizado"
            app:srcCompat="@android:drawable/ic_input_add" />

    </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            android:gravity="center">
        <Button
            android:id="@+id/cancelar_cancel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Sair"
            android:textAllCaps="false"

            android:background="@drawable/botao_inicial_customizado"
            android:layout_marginRight="15dp"
            />
        <Button
            android:id="@+id/cancelar_confirar"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Confirmar"
            android:textAllCaps="false"
            android:background="@drawable/botao_inicial_customizado"
            android:layout_marginLeft="15dp"
            />
    </LinearLayout>

</LinearLayout>
