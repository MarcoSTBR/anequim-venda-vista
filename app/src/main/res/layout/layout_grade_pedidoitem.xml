<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/botao_customizado"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewPedidoItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            tools:text="COCA COLA 300ML" />

        <TextView
            android:id="@+id/textIemPrdObs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="OBS"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textAlignment="textStart"
            android:textColor="@color/texto_sombriado"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textQPrPedidoItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="@color/colorPreto"
            tools:text="1 X R$ 12.00 = R$ 12.00" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_mais"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:background="@drawable/botao_customizado"
            app:srcCompat="@android:drawable/ic_input_add" />

        <ImageButton
            android:id="@+id/ib_menos"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:background="@drawable/botao_customizado"
            app:srcCompat="@drawable/ic_baseline_remove_24" />

        <ImageButton
            android:id="@+id/ib_editar"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:background="@drawable/botao_customizado"
            app:srcCompat="@android:drawable/ic_menu_edit" />
    </LinearLayout>

</LinearLayout>
