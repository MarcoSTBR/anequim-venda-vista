<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityFechamentoConta">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        />

    <Spinner
        android:id="@+id/spinnerImpConta"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:minHeight="30dp"
        android:background="?attr/colorPrimary"
        android:popupBackground="?attr/colorPrimary" />

    <TextView
        android:id="@+id/imprimir_recibo_conta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTA 1"
        android:layout_marginTop="3dp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/imprimir_recibo_abertura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="01/02/2020 hh:nn:ss"
        android:layout_marginTop="3dp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/imprimir_recibo_fechamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="01/02/2020 hh:nn:ss"
        android:layout_marginTop="3dp"
        android:gravity="center"
        />
    <Button
        android:id="@+id/recibo_recibo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Recibo"
        android:textAllCaps="false"
        android:background="@drawable/botao_inicial_customizado"
        android:layout_marginTop="5dp"
        />
    <Button
        android:id="@+id/recibo_sair"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:text="Sair"
        android:background="@drawable/botao_inicial_customizado"
        android:layout_marginTop="5dp"
        />


</LinearLayout>