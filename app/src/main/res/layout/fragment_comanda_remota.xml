<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_config.FragmentComandaRemota">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/configuracao_comanda_remota" />
    <CheckBox
        android:id="@+id/ativar_comanda_remota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ativar Comanda Remota" />

    <EditText
        android:id="@+id/servidor_imp_remoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="IP do Servidor"/>
    <Button
        android:id="@+id/atualizar_setor_imp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atualizar Comanda Remota"
        android:paddingLeft="10dp"
        android:textAllCaps="false"
        android:paddingRight="10dp"
        android:background="@drawable/botao_inicial_customizado"
        />

    </LinearLayout>

</FrameLayout>