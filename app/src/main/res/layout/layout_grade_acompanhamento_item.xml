<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grade_produto_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/botao_customizado"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/textProdutoAcompItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    tools:text="COCA COLA 300ML"
                    android:textSelectHandleRight="@id/textProdutoPreco"
                    />
                <TextView
                    android:id="@+id/preco_acomp_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textAlignment="textStart"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    tools:text="R 1.999,99" />

           <TextView
                android:id="@+id/textProdutoAcompObsItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                tools:text="obs sem gelo" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                >

                <ImageButton
                    android:id="@+id/menos_acomp_item"
                    android:layout_width="80dp"
                    android:layout_height="32dp"
                    android:background="@drawable/botao_customizado"
                    android:paddingRight="5dp"
                    app:srcCompat="@drawable/ic_baseline_remove_24" />

                <TextView
                    android:id="@+id/acomp_item_quant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/mais_acomp_item"
                    android:layout_toEndOf="@id/menos_acomp_item"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    tools:text="999910" />

                <ImageButton
                    android:id="@+id/mais_acomp_item"
                    android:layout_width="80dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/botao_customizado"
                    app:srcCompat="@android:drawable/ic_input_add" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
