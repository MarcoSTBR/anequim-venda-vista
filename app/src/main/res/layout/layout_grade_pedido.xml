<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/botao_customizado"
    android:layout_marginBottom="5dp"
    android:id="@+id/grade_pedido_card"
    >

    <RelativeLayout
        android:id="@+id/grade_pedido_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/botao_customizado">

        <TextView
            android:id="@+id/textViewLabelPed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text="@string/label_pedido"
            android:textColor="@color/colorPreto"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewGradePedidoQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewLabelPed"
            android:layout_alignStart="@id/textViewLabelPed"
            android:textSize="12sp"
            tools:text="Itens (20) no valor de R$ 121212,212" />

        <ImageButton
            android:id="@+id/pedidocontaabrir"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/pedidoconta"
            android:background="@drawable/botao_customizado"
            android:src="?attr/homeAsUpIndicator" />

        <ImageButton
            android:id="@+id/pedidoconta"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/botao_customizado"
            android:layout_marginRight="15dp"
            app:srcCompat="?attr/actionModePasteDrawable" />


    </RelativeLayout>





</androidx.cardview.widget.CardView>
