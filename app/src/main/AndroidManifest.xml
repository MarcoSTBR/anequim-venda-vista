<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:targetSandboxVersion="1">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.NEARBY_WIFI_DEVICES" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logotipo_principal_foreground"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="UnusedAttribute"
        tools:replace="android:icon,android:theme">
        <uses-library android:name="org.apache.http.legacy" android:required="false"/>
        <activity
            android:name=".ActivityItemSelect"
            android:exported="false" />
        <activity
            android:name=".ActivityDisplayNFce"
            android:exported="false"
            android:label="@string/title_activity_display_nfce"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivitySuprimentoSangria"
            android:exported="false" />
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/network_security_config" />

        <activity
            android:name=".ActivityFechamentoConta"
            android:exported="false"
            android:label="@string/title_activity_fechamento_conta" />
        <activity
            android:name=".ActivityImprimirConta"
            android:exported="false" />
        <activity
            android:name=".ActivityUpLoad"
            android:exported="false" />
        <activity
            android:name=".ActivityContaList"
            android:exported="false"
            android:label="@string/title_activity_conta_list" />
        <activity
            android:name=".ActivityProdutoList"
            android:exported="true" />
        <activity
            android:name=".ActivityTerminal"
            android:exported="true" />
        <activity
            android:name=".ActivityAutenticacao"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_autenticacao_antigo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivityValor"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".ActivityImpressao"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_impressao"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivityFechamentoCaixa"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_fechamento_caixa"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivityGradeVendaItem"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_grupo_produto"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivityGradeVendas"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_grupo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivityPagamento"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_pagamento"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivityConta"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_conta"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivityEnvioPedido"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_envio_pedido"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivityProdutoAdd"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_produto_add"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ActivityConfiguracao" />
        <activity
            android:name=".ActivityLogin"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivityPrincipal"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ActivityInicial"
            android:configChanges="orientation|screenSize"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>